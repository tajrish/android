<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <fragment xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/travel_map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MapsActivity" />

    <!--content view-->
    <FrameLayout
        android:id="@+id/travel_expander"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-40dp"
            android:scaleType="matrix"
            android:src="@drawable/scraps" />

        <ImageView
            android:id="@+id/travel_backpack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-10dp"
            android:layout_marginLeft="-10dp"
            android:src="@drawable/backpack" />

        <ImageView
            android:id="@+id/travel_quests_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:scaleType="matrix"
            android:src="@drawable/map" />

        <ImageView
            android:id="@+id/travel_quests_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="50dp"
            android:layout_marginTop="30dp"
            android:scaleType="matrix"
            android:src="@drawable/tips" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="130dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right">

                    <io.tajrish.views.custom.FFTextView
                        android:id="@+id/travel_done"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="۳" />

                    <io.tajrish.views.custom.FFTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="تعداد معموریت های انجام شده: " />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right">

                    <io.tajrish.views.custom.FFTextView
                        android:id="@+id/travel_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="۵" />

                    <io.tajrish.views.custom.FFTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="تعداد  کل معموریتها: " />
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/travel_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:progress="50"
                    android:progressDrawable="@drawable/progressbar" />

                <ScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
                    <io.tajrish.views.custom.FFTextView
                        android:id="@+id/travel_tip"
                        android:layout_width="match_parent"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"/>
                </ScrollView>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</FrameLayout>